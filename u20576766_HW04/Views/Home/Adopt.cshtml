<div class="container">
    <h2 class="place">Adobt An Animal Now!!</h2>
    <br />
    <form method="post">
        <h3>Adoptive Parent Information</h3>
        <table>
            <tr>
                <td>
                    <div class="form-group">
                        <label for="name">First Name</label>
                        <input type="text" autocomplete="off" placeholder="Jane" name="first" class="form-control" required />
                    </div>
                </td>
                <td>
                    <p>&nbsp;</p>
                </td>
                <td>
                    <div class="form-group">
                        <label for="last">Last Name</label>
                        <input type="text" autocomplete="off" placeholder="Doe" name="last" class="form-control" required />
                    </div>
                </td>
            </tr>

            <tr>
                <td>
                    <div class="form-group">
                        <label for="mail">Email</label>
                        <input type="email" autocomplete="off" placeholder="email@example.com" name="mail" class="form-control" required />
                    </div>
                </td>
                <td>
                    <p>&nbsp;</p>
                </td>
                <td>
                    <div class="form-group">
                        <label for="phy">Physical Address</label>
                        <input type="text" autocomplete="off" placeholder="0001 Lambda St" name="phy" class="form-control" required />
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <label for="cel">Phone Number</label>
                        <input type="tel" autocomplete="off" placeholder="081 000 0101" name="cel" class="form-control" required />
                    </div>
                </td>
                <td>
                    <p>&nbsp;</p>
                </td>
            </tr>
        </table>


        <h3>Animal Information</h3>
        <table>
            <tr>
                <td>
                    <div class="form-group">
                        <label>Animal Species: </label>
                        <select name="Species" class="form-control">
                            <option value="Beluga Whale">Beluga Whale</option>
                            <option value="Clownfish">Clownfish</option>
                            <option value="Shark">Shark</option>
                            <option value="Dolphin">Dolphin</option>
                            <option value="Otter">Otter</option>
                            <option value="Turtle">Turtle</option>
                            <option value="Penguin">Penguin</option>
                            <option value="Goldfish">Goldfish</option>
                        </select>
                    </div>
                </td>
                <td>
                    <p>&nbsp;</p>
                </td>
                <td>
                    <p>&nbsp;</p>
                </td>
            </tr>

            <tr>
                <td>
                    <div class="form-group">
                        <label for="pName">Animal Name</label>
                        <input type="text" autocomplete="off" placeholder="Pepper" name="petName" class="form-control" required />
                    </div>
                </td>
                <td>
                    <p>&nbsp;</p>
                </td>
                <td>
                    <p>&nbsp;</p>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <label>Adoption Donation Type: </label>
                        <select name="donType" class="form-control">
                            <option value="Once-Off">Once-Off</option>
                            <option value="Monthly">Monthly</option>
                        </select>
                    </div>
                </td>
                <td>
                    <p>&nbsp;</p>
                </td>
            </tr>
        </table>
        <a  class="btn btn-success" href="https://localhost:44321/Donate/Donate">Pay Donation</a>
    </form>
</div>
<script>

</script>

@{         
    if (IsPost)
    {
        var name = Request["first"];
        var pet = Request["petName"];
        var surname = Request["last"];
        var email = Request["mail"];
        var phy = Request["phy"];
        var phone = Request["cel"];
        var species = Request["Species"];
        var type = Request["donType"];

        var adopter = "Name: " + name + Environment.NewLine + "Surname: " + surname + Environment.NewLine + "Pet Name: " + pet + "  Species: " + species + Environment.NewLine + "Email: " + email + Environment.NewLine + "Phone Number: ( " + phone + " )" + Environment.NewLine + "Physical Address: " + phy + Environment.NewLine + "Adoption Donation Type: " + type + Environment.NewLine + Environment.NewLine;
        var add = Server.MapPath("~/Media/AdoptForm/" + name + " " + surname + ".txt");
        File.AppendAllText(add, adopter);
    }
}

