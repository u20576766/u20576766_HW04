
@{
    ViewBag.Title = "Help";
}
<br />
<div class="jumbotron" style="background-image: url(https://serving.photos.photobox.com/95362608f5a3bdbe0e3c7f5d834669fabbccf3a9a28e2e0f39a177d3fc19e0659329e2ec.jpg); background-size: cover; ">
    <h3 class="place name" style="color:white;">Get Involved</h3>
</div>
