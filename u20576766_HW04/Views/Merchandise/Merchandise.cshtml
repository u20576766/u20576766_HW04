<br />
<div class="container place">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>#ID</th>
                <th>Name</th>
                <th>Colour</th>
                <th>Size</th>
                <th>Quantity</th>
                <th>Type</th>
                <th>Engraving</th>
                <th>Available In Stock</th>
                <th>Mech Up For Grabs!</th>
            </tr>
        </thead>
        @foreach (var merch in Model)
        {
            <tr>
                <td>@merch.ID</td>
                <td>@merch.Name</td>
                <td>@merch.Colour</td>
                <td>@merch.Size</td>
                <td>@merch.Quantity</td>
                <td>
                    @if (merch.GetType() == typeof(TopViewModel))
                    {
                        @:Top
                    }
                    else if (merch.GetType() == typeof(HoodieViewModel))
                    {
                        @:Hoodie
                    }
                    else
                    {
                        @:Hat
                    }
                </td>
                <td>
                    @if (merch.GetType() == typeof(HoodieViewModel))
                    {
                        @:Hoodie
                    }
                    else
                    {
                        <p>Not Applicable</p>
                    }
                </td>
                <td>@merch.AvailableStock()</td>
                <td>@merch.FreeMerch()</td>
            </tr>
        }



    </table>
</div>

